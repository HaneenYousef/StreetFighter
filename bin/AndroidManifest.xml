<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ps.galaxy.streetfighter"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="ps.galaxy.streetfighter.StartActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="ps.galaxy.streetfighter.Characters"
            android:label="@string/title_activity_characters" 
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="ps.galaxy.streetfighter.StreetFighter"
            android:label="@string/title_activity_street_fighter"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" >
        </activity>
        <activity
            android:name="ps.galaxy.streetfighter.SelectFighters"
            android:label="@string/title_activity_select_fighters"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" >
        </activity>
        <activity
            android:name="ps.galaxy.streetfighter.SelectArena"
            android:label="@string/title_activity_select_arena"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" >
        </activity>
        <activity
            android:name="ps.galaxy.streetfighter.AboutMe"
            android:label="@string/title_activity_about_me"
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>